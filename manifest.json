{
  "manifest_version": 3,
  "name": "EV Value Scorer",
  "version": "1.0.0",
  "description": "Save and compare EV listings from AutoTrader, Kijiji, Clutch, and more. Score vehicles based on your priorities.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "*://*.autotrader.ca/*",
    "*://*.kijiji.ca/*",
    "*://*.clutch.ca/*",
    "*://*.canadadrives.ca/*",
    "*://*.cargurus.ca/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.autotrader.ca/*",
        "*://*.kijiji.ca/*",
        "*://*.clutch.ca/*",
        "*://*.canadadrives.ca/*",
        "*://*.cargurus.ca/*"
      ],
      "js": [
        "shared/vehicle-db.js",
        "content/parsers/autotrader.js",
        "content/parsers/kijiji.js",
        "content/parsers/clutch.js",
        "content/parsers/cargurus.js",
        "content/parsers/canadadrives.js",
        "content/content.js"
      ],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "EV Value Scorer"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+E"
      },
      "description": "Open EV Value Scorer"
    },
    "save_listing": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Save current listing"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
